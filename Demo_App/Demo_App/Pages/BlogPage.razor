@page "/BlogPage"

<h2 class="text-2xl font-semibold">Admin Blog Page</h2>

<div class="mt-6">
    <!-- Blog post form -->
    <div class="mb-4">
        <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
        <input type="text" id="title" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" @bind="NewBlogPost.Title" />
    </div>

    <div class="mb-4">
        <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
        <textarea id="content" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" rows="6" @bind="NewBlogPost.Content"></textarea>
    </div>

    <div class="mb-4">
        <label for="tagging" class="block text-sm font-medium text-gray-700">Tagging</label>
        <input type="text" id="tagging" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" @bind="NewBlogPost.Tagging" />
    </div>

    <div class="mb-4">
        <label for="headerImage" class="block text-sm font-medium text-gray-700">Header Image</label>
        <InputFile id="headerImage" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" OnChange="HandleFileUpload" />
        @if (!string.IsNullOrEmpty(NewBlogPost.HeaderImage))
        {
            <img src="@NewBlogPost.HeaderImage" alt="Header Image Preview" class="mt-2 max-w-xs" />
        }
    </div>

    <div class="mb-4">
        <label for="division" class="block text-sm font-medium text-gray-700">Division</label>
        <select id="division" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" @bind="NewBlogPost.Division">
            <option value="">Select Division</option>
            @foreach (var division in BlogService.GetDistinctDivisions())
            {
                <option value="@division">@division</option>
            }
        </select>
    </div>

    <div class="mb-4">
        <label for="category" class="block text-sm font-medium text-gray-700">Category</label>
        <select id="category" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" @bind="NewBlogPost.Category">
            <option value="">Select Category</option>
            @if (!string.IsNullOrEmpty(NewBlogPost.Division))
            {
                foreach (var category in BlogService.GetCategoriesByDivision(NewBlogPost.Division))
                {
                    <option value="@category">@category</option>
                }
            }
        </select>
    </div>

    <button class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" @onclick="CreateBlogPost">Create Blog Post</button>
</div>



