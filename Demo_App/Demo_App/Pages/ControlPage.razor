                                        <MultiSelectFieldSettings></MultiSelectFieldSettings>
                                    </SfMultiSelect>
                                </div>

                                if (SelectedBlogDivision == null && !SelectedBlogDivision.Any())
                                {
                                    divisionIds.Value = "";

                                }
                                else
                                {
                                    divisionIds.Value = String.Join(",", SelectedBlogDivision);

