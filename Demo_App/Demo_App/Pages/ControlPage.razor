                                        string avatarUrl = component.componentProperties.Where(x => x.Key == "AvatarUrl").Select(x => x.Value).FirstOrDefault() ?? "";
                                        string name = component.componentProperties.Where(x => x.Key == "Name").Select(x => x.Value).FirstOrDefault() ?? "";

