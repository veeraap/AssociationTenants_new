@page "/bloglist"

<h2 class="text-2xl font-semibold">Blog List</h2>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-6">
    @foreach (var post in BlogService.GetBlogPosts())
    {
        <div class="bg-white shadow-md rounded-lg p-4">
            @if (!string.IsNullOrEmpty(post.HeaderImage))
            {
                <img src="@post.HeaderImage" alt="Header Image" class="h-32 w-full object-cover rounded-md mb-2" />
            }
            <h3 class="text-lg font-semibold">@post.Title</h3>
            <p class="text-gray-600 mt-1">@post.Content</p>
            <div class="mt-2">
                <span class="text-sm font-medium">@post.Tagging</span>
                <span class="ml-2 text-xs text-gray-500">Division: @post.Division</span>
                <span class="ml-2 text-xs text-gray-500">Category: @post.Category</span>
            </div>
            <div class="flex mt-4">
                @* <button class="px-4 py-2 bg-blue-500 text-white rounded-md mr-2" @onclick="EditBlogPost">Edit</button>
                <button class="px-4 py-2 bg-red-500 text-white rounded-md" @onclick="DeleteBlogPost">Delete</button> *@
                <button class="px-4 py-2 bg-blue-500 text-white rounded-md mr-2" @onclick="() => EditBlogPost(post)">Edit</button>
                <button class="px-4 py-2 bg-red-500 text-white rounded-md" @onclick="() => DeleteBlogPost(post)">Delete</button>
                @* <a href="/BlogPage/@post.Id" class="btn btn-primary ">Edit<span class="sr-only">, @post.Id</span></a> *@
            </div>
        </div>
    }
</div>




